rules_version = '2';

// Serviço de Storage
service firebase.storage {
  // Define o bucket padrão
  match /b/{bucket}/o {
    
    // Regras para a pasta de Check-ins
    // Caminho: checkins/USER_ID/NOME_DO_ARQUIVO
    match /checkins/{userId}/{allPaths=**} {
      
      // PERMITIR LEITURA: Qualquer usuário logado pode visualizar as imagens
      allow read: if request.auth != null;
      
      // PERMITIR ESCRITA:
      // 1. Usuário deve estar logado
      // 2. O usuário deve ser o dono da pasta (userId na URL deve bater com o UID do usuário)
      // 3. (Opcional) Podemos validar tamanho/tipo de arquivo aqui também no futuro
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
